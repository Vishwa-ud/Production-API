# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
# Development: postgres://user:password@neon-local:5432/neondb
# Production: postgres://user:password@your-project.neon.tech/neondb?sslmode=require
DATABASE_URL=

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Cookie Configuration
COOKIE_SECRET=your-cookie-secret-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Arcjet Configuration
ARCJET_KEY=your-arcjet-key-here

# Neon Configuration
# Get these from: https://console.neon.tech
NEON_API_KEY=your-neon-api-key-here
NEON_PROJECT_ID=your-project-id-here
PARENT_BRANCH_ID=your-parent-branch-id-here
